@model List<Product>

<div class="class shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Seznam měřáků</h2>
        </div>
    </div>
</div>

<div class="card-body p-4">
    <div class="row pt-3">
        <div class="col-12 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-journal-plus p-2"></i>Nový produkt</a>
        </div>
    </div>
    <table class="table table-bordered table-striped text-center">
        <thead>
        <tr>
            <th class="text-start">
                Produkt
            </th>
            <th>
                Číslo měřáku
            </th>
            <th>
                 Popis měřáku        
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayProductNr))
        {
            <tr>
                <td class="text-start">@obj.NameOfProduct</td>
                <td>@obj.DisplayProductNr</td>
                <td>@obj.Description</td>
                <td class="text-end">
                    <div class="w-75 btn-group" role="group">

                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-2"><i class="bi bi-pen-fill"> Edituj</i></a>

                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"> Smaž</i></a>

                    </div>
                </td>
                @*<td></td>*@
            </tr>
        }
        </tbody>
    </table>
</div>