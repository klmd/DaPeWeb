@model List<KindOfProduct>

<div class="class shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Seznam typů měřáků</h2>
        </div>
    </div>
</div>

<div class="card-body my-4">
    <div class="row pt-3">
        <div class="col-12 text-end">
            <a asp-controller="KindOfProduct" asp-action="Create" class="btn btn-primary"><i class="bi bi-journal-plus p-2"></i>Nový typ měřáku</a>
        </div>
    </div>
    <table class="table table-bordered table-striped text-center">
        <thead>
        <tr>
            <th class="text-start">
                Typ Měřáku
            </th>
            <th>
                Číslo typu měřáku
            </th>
            <th>        
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayTypeOfProductNr))
        {
            <tr>
                <td class="text-start">@obj.TypeOfProduct</td>
                <td>@obj.DisplayTypeOfProductNr</td>
                <td class="text-end">
                    <div class="w-75 btn-group" role="group">

                        <a asp-controller="KindOfProduct" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-2"><i class="bi bi-pen-fill"> Edituj</i></a>

                        <a asp-controller="KindOfProduct" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"> Smaž</i></a>

                    </div>
                </td>
                @*<td></td>*@
            </tr>
        }
        </tbody>
    </table>
</div>