
<div class="class shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Seznam Společností</h2>
        </div>
    </div>
</div>

<div class="card-body my-4">
    <div class="row pt-3">
        <div class="col-12 text-end my-2">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-journal-plus p-2"></i>Nová společnost - založení</a>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped text-center" style="width: 100%">
        <thead>
            <tr>
                <th class="text-start">
                    Společnost
                </th>
                <th>
                    Adresa
                </th>
                <th>Město</th> @*bude doplněno*@
                <th>Stát</th> @*bude doplněno*@
                <th>
                    Telefon
                </th>
                <th>
                    e-mail
                </th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts
    {
    <script src="~/js/company.js"></script>
}
